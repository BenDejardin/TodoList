{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="display-6" align="center">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}
    
<div class="btn-group d-flex justify-content-center" role="group" aria-label="Basic outlined example">
    <a href="{{ path('task_create') }}" type="button" class="btn btn-outline-primary">Créer une nouvelle tâche</a>
    
    <a href="{{ path('task_list') }}" type="button" class="btn btn-outline-primary">Consulter la liste des tâches à faire</a>
    
    <a href="{{ path('task_list-done') }}" type="button" class="btn btn-outline-primary">Consulter la liste des tâches terminées</a>
</div>
{% endblock %}
